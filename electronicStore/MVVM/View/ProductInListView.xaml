<UserControl x:Class="electronicStore.WPF.MVVM.View.ProductInListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:electronicStore.WPF.MVVM.View"
             mc:Ignorable="d">
    <Grid>
        <Border Width="220"
                Height="250"
                CornerRadius="10">

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                    <GradientStop Color="#222" Offset="0.0"/>
                    <GradientStop Color="#fff" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Border.Clip>
                <RectangleGeometry RadiusX="10"
                                   RadiusY="10"
                                   Rect="0,0,250,250"/>
            </Border.Clip>

            <Grid>
                <StackPanel>
                    <Button Content="{Binding Data.Model}"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="22"
                            Command="{Binding OpenProductCommand}"
                            HorizontalAlignment="Center"
                            Margin="0,170,0,0"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Data.Price}"
                               Foreground="White"
                               FontSize="28"
                               Margin="0,1,0,0"/>
                        <TextBlock Text="₴"
                           Foreground="White"
                           FontSize="20"
                           Margin="2,7,0,0"/>
                    </StackPanel>

                </StackPanel>

                <Image Width="350"
                        Height="150"
                        Source="{Binding Data.Image}"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,70"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>