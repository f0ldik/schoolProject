<UserControl x:Class="electronicStore.WPF.MVVM.View.PhoneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:electronicStore.WPF.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left"
                    VerticalAlignment="Top">

            <TextBlock Text="Серія"
                   Foreground="#ffffff"
                   FontWeight="Bold"
                   FontSize="22"
                   Margin="0,0,0,0"/>

            <TextBlock Text="{Binding Data.Model}"
                   Foreground="#ffffff"
                   FontSize="18"
                   Margin="5,10,0,0"/>

            <TextBlock Text="Дисплей"
                   Foreground="#ffffff"
                   FontWeight="Bold"
                   FontSize="22"
                   HorizontalAlignment="Left"
                   Margin="0,10,0,0"/>
            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                <TextBlock Text="Діагональ екрана"
                        Foreground="#ffffff"
                        FontSize="18"
                        Margin="0,10,0,0"/>
                <TextBlock Text="{Binding Data.DisplaySize}"
                        Foreground="#ffffff"
                        FontSize="18"
                        Margin="5,10,0,0"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                <TextBlock Text="Роздільна здатність дисплея"
                         Foreground="#ffffff"
                         FontSize="18"
                          Margin="0,10,0,0"/>
                <TextBlock Text="{Binding Data.DisplayFullSize}"
                         Foreground="#ffffff"
                         FontSize="18"
                         Margin="5,10,0,0"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">

                <TextBlock Text="Частота оновлення екрана"
                   Foreground="#ffffff"
                   FontSize="18"
                   Margin="0,10,0,0"/>
                <TextBlock Text="{Binding Data.DisplayGC}"
                    Foreground="#ffffff"
                    FontSize="18"
                    Margin="5,10,0,0"/>
                <TextBlock Text="Гц"
                    Foreground="#ffffff"
                    FontSize="18"
                    Margin="10,10,0,0"/>
            </StackPanel>
            <TextBlock Text="Функції пам'яті"
                   Foreground="#ffffff"
                   FontWeight="Bold"
                   FontSize="22"
                   HorizontalAlignment="Left"
                   Margin="0,10,0,0"/>
            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                <TextBlock Text="Вбудована пам'ять"
                   Foreground="#ffffff"
                   FontSize="18"
                   Margin="0,10,0,0"/>
                <TextBlock Text="{Binding Data.MemorySize}"
                    Foreground="#ffffff"
                    FontSize="18"
                    Margin="5,10,0,0"/>
                <TextBlock Text="ГБ"
                    Foreground="#ffffff"
                    FontSize="18"
                    Margin="10,10,0,0"/>
            </StackPanel>
            <TextBlock Text="Фронтальна камера"
                   Foreground="#ffffff"
                   FontWeight="Bold"
                   FontSize="22"
                   HorizontalAlignment="Left"
                   Margin="0,10,0,0"/>
            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                <TextBlock Text="Фронтальна камера"
                   Foreground="#ffffff"
                   FontSize="18"
                   Margin="0,10,0,0"/>
                <TextBlock Text="{Binding Data.CameraMP}"
                    Foreground="#ffffff"
                    FontSize="18"
                    Margin="5,10,0,0"/>
                <TextBlock Text="MП"
                    Foreground="#ffffff"
                    FontSize="18"
                    Margin="10,10,0,0"/>
            </StackPanel>

            <TextBlock Text="Процесор"
                   Foreground="#ffffff"
                   FontWeight="Bold"
                   FontSize="22"
                   HorizontalAlignment="Left"
                   Margin="0,10,0,0"/>
            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">

                <TextBlock Text="Назва процесора"
                   Foreground="#ffffff"
                   FontSize="18"
                   Margin="0,10,0,0"/>

                <TextBlock Text="{Binding Data.Procesor}"
                    Foreground="#ffffff"
                    FontSize="18"
                    Margin="5,10,0,0"/>

            </StackPanel>
        </StackPanel>
        <Image Width="265"
               Height="420"
               Source="{Binding Data.Image}"
               HorizontalAlignment="Right"
               Margin="0,8,10,72"/>
        
        <Button Content="Buy" 
             Command="{Binding CategoryCommand}"
             CommandParameter="0"
             Height="50" 
             Width="125"
             Foreground="#9400D3" 
             Background="#ffffff" 
             FontSize="20"
             Margin="0,0,10,10"
             VerticalAlignment="Bottom"
             HorizontalAlignment="Right" />

        <Button Content="Add to cart" 
             Command="{Binding AddToCartCommand}"
             CommandParameter="{Binding Data.Id}"
             Height="50" 
             Width="125"
             Foreground="#9400D3"
             Background="#ffffff" 
             FontSize="20"
             Margin="0,0,150,10"
             VerticalAlignment="Bottom"
             HorizontalAlignment="Right"   />
    </Grid>
</UserControl>
