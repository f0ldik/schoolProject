<Window x:Class="electronicStore.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="600" Width="950"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="#212529" 
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="TechnoHub" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   Foreground="#ffffff" 
                   FontSize="22" />

            <StackPanel Grid.Row="1">
                <RadioButton Content="Home" 
                             Command="{Binding CategoryCommand}"
                             CommandParameter="0"
                             Height="50" 
                             Foreground="#ffffff" 
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Price filter" 
                             Command="{Binding CategoryCommand}"
                             CommandParameter="4"
                             Height="50" 
                             Foreground="#ffffff" 
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Iphone" 
                             Command="{Binding CategoryCommand}"
                             CommandParameter="1"
                             Height="50" 
                             Foreground="#ffffff" 
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Google" 
                             Command="{Binding CategoryCommand}"
                             CommandParameter="2"
                             Height="50" 
                             Foreground="#ffffff" 
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Samsung" 
                             Command="{Binding CategoryCommand}"
                             CommandParameter="3"
                             Height="50" 
                             Foreground="#ffffff" 
                             FontSize="25"
                             Style="{StaticResource MenuButtonTheme}"/>


            </StackPanel>
            <StackPanel Grid.Column="1"
              Orientation="Horizontal"
              Margin="0,20,0,0"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top">
                <TextBox 
                       Width="500" 
                       Height="50" 
                       HorizontalAlignment="Left" 
                       Style="{StaticResource ModernTextbox}"/>
                
            <Button Content="Cart"
               Height="50"
               VerticalAlignment="Top"
               Margin="5,0,0,0"
               Width="70"
               Command="{Binding CategoryCommand}"
               CommandParameter="99"/>
            </StackPanel>
            <ContentControl Grid.Row="1" 
                            Grid.Column="1" 
                            Margin="10"
                            Content="{Binding CurrentView}"/>
                
        </Grid>
    </Border>
</Window>